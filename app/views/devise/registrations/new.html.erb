
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="ui middle aligned center aligned grid">
  <div class="four wide column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.jpg", class:"image" %>
      <div class="content">
        Sign-up for a new account
      </div>
    </h2>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail address" , style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; margin-bottom:10px;" %>

      </div>
        </div>
        <div class="field">  
          <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
          <div class="ui left icon input">
            <i class="lock icon"></i>
    <%= f.password_field :password, autocomplete: "off", style:"background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;", placeholder:"Password" %>
  
  </div>
        </div>
        <div class="field" style="margin-top: 1em">
         <div class="ui left icon input">
            <i class="lock icon"></i>
    <%= f.password_field :password_confirmation, autocomplete: "off", style:"background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;", placeholder:"Password again" %>
  
  </div>
        </div>
 

 
    <%= f.submit "Sign up",  class:"ui fluid large teal submit button", style: "margin-top:1em;" %>

      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
<%= render "devise/shared/links" %>    
    </div>
  </div>
</div>


<% end %>

