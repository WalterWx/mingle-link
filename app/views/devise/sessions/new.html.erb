<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="ui middle aligned center aligned grid">
  <div class="four wide column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.jpg", class:"image" %>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail address" , style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; margin-bottom:10px;" %>

			</div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
    <%= f.password_field :password, autocomplete: "off", style:"background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" %>
  
  </div>
        </div>
<% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="ui left icon input">
     <p> <br><%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
	  <br><br></p>
    </div>
	</div>
  <% end -%>
 

 
    <%= f.submit "Log in",  class:"ui fluid large teal submit button" %>

      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
<%= render "devise/shared/links" %>    
    </div>
  </div>
</div>


<% end %>
