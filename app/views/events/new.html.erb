
<div class="ui container">
<h1>Add Event</h1>
<%=form_for :event, url: events_path, :html => {:class => 'ui form'} do |f| %>

<p>
	<%= f.label "Event Name" %>
	<%= f.text_field :name %><br>
	<%= f.label :date %>
	<%= f.text_field :date %><br>
	<%= f.label :description %>
	<%= f.text_area :description %>

</p>

<p>
	<%= f.submit :class => 'ui button' %>
</p>
<% end %>
</div>



  
