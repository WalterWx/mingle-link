<div class="ui container">
	<p id=edit_event_header>Edit Event</p>
</div>

<div class="ui container">
	<div class="ui form">
		<%=form_for :event, url: event_path(@event), method: :put do |f| %>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>
		
		<p>
			<%= f.label :datetime_start %><br>
			<%= f.text_field :datetime_start %>
		</p>
		
		<p>
			<%= f.label :datetime_end %><br>
			<%= f.text_field :datetime_end  %>
		</p>

		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		</p>

		<button class="ui teal button"><%= link_to 'Delete', event_path(@event), 
			method: :delete,
			data: {confirm: 'Are you sure?'} %>
		</button>

		<%= f.submit 'Edit', :class => 'ui teal button' %>
		<% end %>
	</div>
</div>


<script>$('#rangestart').calendar({type: 'date', endCalendar: $('#rangeend')});
$('#rangeend').calendar({type: 'date', startCalendar: $('#rangestart')});</script>

