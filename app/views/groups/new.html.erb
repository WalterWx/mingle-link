<div class="ui container">
<h1>Add Group</h1>
<%=form_for :group, url: group_path, :html => {:class => 'ui form'} do |f| %>

<p>
    <%= f.label "Group Name" %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

</p>

<p>
    <%= f.submit :class => 'ui button' %>
</p>
<% end %>
</div>