<div class="ui container">

<h1>New group</h1>

<%=form_for :group, url: event_groups_path, :html => {:class => 'form'} do |f| %>
<p>
    <%= f.label "Group Name" %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit :class => 'ui button' %>
</p>
<% end %>
</div>